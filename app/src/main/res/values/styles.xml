<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="activity_main_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="image_pic">
        <item name="android:layout_height">125dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="text_view_names_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:fontFamily">@font/cairo_light</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#00008B</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="text_view_names">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#211a1e</item>
    </style>


    
    <style name="image_loc">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>

    </style>

</resources>
